<metal:main use-macro="load: ../layouts/default.pt">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/login.css" />
    </metal:slot>

    <div metal:fill-slot="content" class="container">
        <h1>Welcome to SyOps!</h1>

        <form method="post" action="/login">

            <a href="${github_login}" class="btn btn-default">
                <img src="/public/img/GitHub-Mark-32px.png" />
                Login with GitHub
            </a>

            <span id="login-or">- OR -</span>

            <a href="/invite/request" class="btn btn-primary btn-lg">
                Request an invite
            </a>
        </form>
    </div>
</metal:main>
