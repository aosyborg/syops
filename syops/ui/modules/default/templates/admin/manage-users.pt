<tal tal:define="global sidebar_active string:admin-users">
<metal:main use-macro="load: ../layouts/user.pt">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/admin.css" />
    </metal:slot>
    <metal:slot fill-slot="javascript">
        <script src="/public/js/admin.js"></script>
    </metal:slot>

    <div metal:fill-slot="content" id="content">
        <div class="menubar">
            <div class="page-title">Users</div>
            <div id="alert"></div>
            <button class="new-app btn btn-success pull-right" id="new-user-btn">
                New User
            </button>
        </div>

        <div class="content-wrapper">
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Is Admin?</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                <tr tal:repeat="row users" id="user-${row.user_id}">
                    <td class="user-id">${row.user_id}</td>
                    <td class="user-name">${row.name}</td>
                    <td class="user-email">${row.email}</td>
                    <td class="user-is-admin">${row.is_admin}</td>
                    <td class="user-created">${row.insert_ts}</td>
                    <td><a href="#" class="user-delete">X</a></td>
                </tr>
            </table>

            <!-- User edit modal -->
            <div class="modal fade" id="edit-user" roll="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                            <h4 class="modal-title">New User</h4>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="#" role="form">
                                <div class="form-group">
                                    <label for="user-name">Name</label>
                                    ${structure:user_form.get_element('name')}
                                </div>
                                <div class="form-group">
                                    <label for="user-email">Email</label>
                                    ${structure:user_form.get_element('email')}
                                </div>
                                <div class="form-group">
                                    <label for="user-password">Password</label>
                                    ${structure:user_form.get_element('password')}
                                </div>
                                <div class="form-group">
                                    <label for="user-is-admin">Is Admin?</label>
                                    ${structure:user_form.get_element('is-admin')}
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                            data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary"
                                id="edit-user-save" data-dismiss="modal">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</metal:main>
</tal>
