<metal:main use-macro="load: ../layouts/user.pt"
    tal:define="global sidebar_active string:app-${app.id}">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/apps.css" />
    </metal:slot>
    <metal:slot fill-slot="javascript">
        <script src="/public/js/apps.js"></script>
    </metal:slot>

    <div metal:fill-slot="content" id="content">
        <div class="menubar">
            <div class="page-title">Edit: ${app.name}</div>
            <div id="alert"></div>
            <button class="btn btn-primary pull-right" id="save-edit-btn">
                Save
            </button>
        </div>

        <div class="content-wrapper"
             data-app-id="${app.id}"
             data-github-owner="${app.github_owner}"
             data-github-repo="${app.github_repo}">

            <form method="post" action="#" role="form">
                <input type="hidden" name="id" tal:attributes="value app.id" />
                <div class="form-group">
                    <label for="app-name">Name</label>
                    ${structure:app_form.get_element('name')}
                </div>
                <div class="form-group">
                    <label for="app-url">GitHub Clone URL</label>
                    ${structure:app_form.get_element('clone_url')}
                </div>
                <div class="form-group">
                    <label for="app-owner">GitHub Owner</label>
                    ${structure:app_form.get_element('github_owner')}
                </div>
                <div class="form-group">
                    <label for="app-repo">GitHub Repository</label>
                    ${structure:app_form.get_element('github_repo')}
                </div>
                <div class="form-group">
                    <label for="app-docs">Documentation</label>
                    ${structure:app_form.get_element('doc_url')}
                </div>
                <div class="form-group">
                    <label for="app-build_instructions">Build Instructions</label>
                    ${structure:app_form.get_element('build_instructions')}
                </div>
            </form>

        </div>
    </div>
</metal:main>
