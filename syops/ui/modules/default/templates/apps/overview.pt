<metal:main use-macro="load: ../layouts/user.pt"
    tal:define="global sidebar_active string:app-${app.id}">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/apps.css" />
    </metal:slot>
    <metal:slot fill-slot="javascript">
        <script src="/public/js/apps.js"></script>
    </metal:slot>

    <div metal:fill-slot="content" id="content">
        <div class="menubar">
            <div class="page-title">${app.name}</div>
            <div id="alert"></div>
            <button class="btn btn-success pull-right" id="new-release-btn">
                <i class="octicon octicon-tag"></i>
                New Release
            </button>
            <a href="/app/edit?id=${app.id}" class="btn btn-default pull-right">
                <i class="octicon octicon-tools"></i>
                Edit Application
            </a>
        </div>

        <div class="content-wrapper"
             data-app-id="${app.id}"
             data-github-owner="${app.github_owner}"
             data-github-repo="${app.github_repo}">

            <!-- Metrics -->
            <div id="metrics" class="clearfix">
               <div class="metric">
                   <div class="field">Production version</div>
                   <div class="data">
                       v${prod['major']}.${prod['minor']}-${prod['revision']}
                   </div>
                   <div class="subtext">${prod['released']}</div>
               </div>
               <div class="metric">
                   <div class="field">QA version</div>
                   <div class="data">
                       v${qa['major']}.${qa['minor']}-${qa['revision']}
                   </div>
                   <div class="subtext">${qa['released']}</div>
               </div>
               <div class="metric">
                   <div class="field">Last build status</div>
                   <div class="data">
                       ${python: latest_release.status if latest_release else 'N/A'}
                    </div>
                   <div class="subtext" tal:condition="python: latest_release">
                       From ${latest_release.tagged_branch} 
                       on ${latest_release.update_ts.strftime('%Y-%m-%d %H:%M')}
                   </div>
               </div>
               <div class="metric">
                   <div class="field"></div>
                   <div class="data">
                       <span tal:condition="python: not app.doc_url">
                           No Documentation!
                       </span>
                       <a href="${app.doc_url}" tal:condition="python: app.doc_url">
                           Documentation
                       </a>
                   </div>
                   <div class="subtext"></div>
               </div>
            </div>

            <!-- Release list -->
            <table class="table">
                <tr>
                    <th>Console</th>
                    <th>Status</th>
                    <th>Version</th>
                    <th>Tagged Branch</th>
                    <th>Description</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
                <tr tal:repeat="release releases" id="release-${release.id}">
                    <td class="release-console">
                        <i class="glyphicon glyphicon-tasks"
                           data-release-id="${release.id}"></i>
                    </td>
                    <td class="release-status">${release.status}
                    </td>
                    <td class="release-version">${release.version}</td>
                    <td class="release-branch">${release.tagged_branch}</td>
                    <td class="release-desc">${release.description}</td>
                    <td class="release-time">${release.update_ts.strftime('%Y-%m-%d %H:%M')}</td>
                    <td class="release-actions">
                        <button tal:condition="python: release.release_status_id == 3"
                            class="btn btn-default release-to-prod">
                            <i class="glyphicon glyphicon-cloud-upload"></i>
                            Release to prod
                        </button>
                    </td>
                </tr>
            </table>

            <!-- Build output modal -->
            <div class="modal fade in" id="build-output" roll="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Build console</h4>
                        </div>
                        <div class="modal-body">
                            <pre>
                            </pre>
                        </div>
                    </div>
                </div>
            </div>

            <!-- App edit modal -->
            <div class="modal fade in" id="edit-release" roll="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                            <h4 class="modal-title">New Release</h4>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="#" role="form">
                                <input type="hidden" name="app_id" tal:attributes="value
                                app.id" />
                                <div class="form-group">
                                    <label class="control-label" for="release-version">
                                        Version
                                        <i class="octicon octicon-question"
                                           data-toggle="popover"
                                           data-content="major.minor-revision
                                                        (i.e.  0.1-1)"></i>
                                    </label>
                                    ${structure:release_form.get_element('version')}
                                </div>
                                <div class="form-group">
                                    <label for="tagged-branch">Branch</label>
                                    ${structure:release_form.get_element('tagged_branch')}
                                </div>
                                <div class="form-group">
                                    <label for="release-description">Description</label>
                                    ${structure:release_form.get_element('description')}
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                                    data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary"
                                    id="edit-release-save">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</metal:main>
