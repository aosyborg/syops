<tal tal:define="global sidebar_active string:app-${app.id}">
<metal:main use-macro="load: ../layouts/user.pt">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/apps.css" />
    </metal:slot>
    <metal:slot fill-slot="javascript">
        <script src="/public/js/apps.js"></script>
    </metal:slot>

    <div metal:fill-slot="content" id="content">
        <div class="menubar">
            <div class="page-title">${app.name}</div>
            <div id="alert"></div>
            <button class="btn btn-success pull-right" id="new-release-btn">
                New Release
            </button>
        </div>

        <div class="content-wrapper"
             data-app-id="${app.id}"
             data-github-owner="${app.github_owner}"
             data-github-repo="${app.github_repo}">

            <!-- Metrics -->
            <div id="metrics" class="clearfix">
               <div class="metric">
                   <div class="field">Production version</div>
                   <div class="data">
                       v${prod['major']}.${prod['minor']}-${prod['revision']}
                   </div>
                   <div class="subtext">${prod['released']}</div>
               </div>
               <div class="metric">
                   <div class="field">QA version</div>
                   <div class="data">
                       v${qa['major']}.${qa['minor']}-${qa['revision']}
                   </div>
                   <div class="subtext">${qa['released']}</div>
               </div>
               <div class="metric">
                   <div class="field">Last build status</div>
                   <div class="data">Success!</div>
                   <div class="subtext">From develop on 17 hours ago</div>
               </div>
               <div class="metric">
                   <div class="field"></div>
                   <div class="data">
                       <a href="https://github.com/aosyborg/syops/wiki">
                           Documentation
                       </a>
                   </div>
                   <div class="subtext"></div>
               </div>
            </div>

            <!-- Release list -->
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Version</th>
                    <th>Tagged Branch</th>
                    <th>Description</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
                <tr tal:repeat="release releases" id="release-${release.id}">
                    <td>${release.id}</td>
                    <td>${release.status}</td>
                    <td>${release.version}</td>
                    <td>${release.tagged_branch}</td>
                    <td>${release.description}</td>
                    <td>${release.update_ts}</td>
                    <td>&nbsp;</td>
                </tr>
            </table>

            <!-- App edit modal -->
            <div class="modal fade" id="edit-release" roll="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                            <h4 class="modal-title">New Release</h4>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="#" role="form">
                                <input type="hidden" name="app_id" tal:attributes="value
                                app.id" />
                                <div class="form-group">
                                    <label for="release-version">Version</label>
                                    ${structure:release_form.get_element('version')}
                                </div>
                                <div class="form-group">
                                    <label for="release-branch">Branch</label>
                                    ${structure:release_form.get_element('branch')}
                                </div>
                                <div class="form-group">
                                    <label for="release-description">Description</label>
                                    ${structure:release_form.get_element('description')}
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                            data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary"
                                id="edit-release-save" data-dismiss="modal">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</metal:main>
</tal>
