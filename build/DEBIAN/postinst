#!/bin/bash

# Postinst script for syops

case "$1" in
    configure)
        virtualenv /opt/syops/env --no-site-packages
        cd /opt/syops
        env/bin/python /opt/syops/setup.py develop

        chmod +x /etc/init.d/syops
        /etc/init.d/syops restart
        /etc/init.d/apache2 restart
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        exit 0
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
