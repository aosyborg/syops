<tal tal:define="global sidebar_active string:admin-teams">
<metal:main use-macro="load: ../layouts/user.pt">
    <metal:slot fill-slot="head">
        <link rel="stylesheet" type="text/css" href="/public/css/admin.css" />
    </metal:slot>
    <metal:slot fill-slot="javascript">
        <script src="/public/js/admin.js"></script>
    </metal:slot>

    <div metal:fill-slot="content" id="content">
        <div class="menubar">
            <div class="page-title">Teams</div>
            <div id="alert"></div>
            <button class="new-app btn btn-success pull-right" id="new-team-btn">
                New Team
            </button>
        </div>

        <div class="content-wrapper">
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>No. of members</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
                <tr tal:repeat="row teams" id="team-${row.team_id}">
                    <td class="team-id">${row.team_id}</td>
                    <td class="team-name">${row.team_name}</td>
                    <td class="team-owner" data-owner-id="${row.owner_id}">
                        ${row.owner_name}</td>
                    <td class="team-member-count">${row.member_count}</td>
                    <td class="team-created">${row.created}</td>
                    <td><a href="#" class="team-delete">X</a></td>
                </tr>
            </table>

            <!-- Team edit modal -->
            <div class="modal fade" id="edit-team" roll="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">&times;</button>
                            <h4 class="modal-title">New team</h4>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="#" role="form">
                                <div class="form-group">
                                    <label for="team-name">Name</label>
                                    ${structure:team_form.get_element('name')}
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default"
                            data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary"
                                id="edit-team-save" data-dismiss="modal">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</metal:main>
</tal>
